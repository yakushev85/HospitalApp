<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.oyakushev.hospitalclient.controller.NewExaminationController">

    <Label text="New Examination Record for John Doe #1234" textAlignment="CENTER">
        <font>
            <Font size="20.0" />
        </font>
        <VBox.margin>
            <Insets left="40.0" top="10.0" />
        </VBox.margin>
    </Label>

    <Separator>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Separator>

    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Description">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextArea fx:id="descriptionArea" prefWidth="400">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextArea>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Diagnosis">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextArea fx:id="diagnosisArea" prefWidth="400">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextArea>
        </children>
    </HBox>

    <Separator>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Separator>

    <HBox>
        <children>
            <Button fx:id="saveButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onSave" prefWidth="150" text="Save">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onCancel" prefWidth="150" text="Cancel">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>

</VBox>
