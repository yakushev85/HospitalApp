<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.oyakushev.hospitalclient.controller.NewVaccinationController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="New Vaccination Record for John Doe #1234" textAlignment="CENTER">
        <font>
            <Font size="20.0" />
        </font>
        <VBox.margin>
            <Insets left="40.0" top="10.0" />
        </VBox.margin>
    </Label>

    <Separator>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Separator>

    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Description">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextArea prefWidth="400">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextArea>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Effective Time">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextField prefWidth="150">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextField>
        </children>
    </HBox>

    <Separator>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Separator>

    <HBox>
        <children>
            <Button alignment="CENTER" contentDisplay="CENTER" prefWidth="150" text="Save">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" prefWidth="150" text="Cancel">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>


</VBox>
