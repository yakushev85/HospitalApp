<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.oyakushev.hospitalclient.controller.LoginController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="loginUsername" promptText="Username">
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="loginPassword" promptText="Password">
        <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
        </VBox.margin>
    </PasswordField>
    <Button fx:id="loginButton" onAction="#onLoginButtonPressed" text="Login" textAlignment="CENTER">
        <VBox.margin>
            <Insets top="5.0" />
        </VBox.margin>
        <padding>
            <Insets bottom="5.0" left="60.0" right="60.0" top="5.0" />
        </padding>
    </Button>

</VBox>
