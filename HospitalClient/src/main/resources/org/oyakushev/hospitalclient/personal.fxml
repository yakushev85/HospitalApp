<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.oyakushev.hospitalclient.controller.PersonalController"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="#ID" textAlignment="CENTER">
        <font>
            <Font size="16.0" />
        </font>
        <VBox.margin>
            <Insets left="40.0" top="10.0" />
        </VBox.margin>
    </Label>
    <Separator>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Separator>

    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Username">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="usernameField" prefWidth="200">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextField>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Password">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" prefWidth="200">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </PasswordField>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="First Name">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="firstNameField" prefWidth="200">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextField>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Last Name">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="lastNameField" prefWidth="200">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextField>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Phone">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="phoneField" prefWidth="200">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextField>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Description">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <TextArea fx:id="descriptionArea" prefWidth="400">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextArea>
        </children>
    </HBox>
    <HBox>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Role">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Label>
            <ComboBox fx:id="roleCombo" prefWidth="200">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </ComboBox>
        </children>
    </HBox>

    <Separator>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Separator>

    <HBox>
        <children>
            <Button fx:id="saveButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onSaveAction" prefWidth="150" text="Save">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onCancelAction" prefWidth="150" text="Cancel">
                <HBox.margin>
                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
</VBox>
